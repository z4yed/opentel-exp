  <script>
    // Check for an error message from the server
    const errorMessage = new URLSearchParams(window.location.search).get(
      "error"
    );

    if (errorMessage) {
      Toastify({
        text: errorMessage,
        duration: 3000, // Duration in milliseconds
        close: true, // Show close button
        gravity: "top", // Position (top/bottom)
        position: "right", // Position (left/right/center)
        backgroundColor: "#ff4d4d", // Custom background color
        stopOnFocus: true, // Stop timeout on focus
      }).showToast();
    }
  </script>
</footer>
